# GitHub Pages 缓存配置
# 针对图标文件和静态资源优化缓存策略

<IfModule mod_expires.c>
    ExpiresActive On

    # 图标文件 - 缓存1年（配合版本号使用）
    <FilesMatch "\.(ico|png|svg|apple-touch-icon\.png|favicon\.ico)$">
        ExpiresDefault "access plus 1 year"
        Header append Cache-Control "public, immutable"
    </FilesMatch>

    # CSS/JS 文件 - 缓存1个月
    <FilesMatch "\.(css|js)$">
        ExpiresDefault "access plus 1 month"
        Header append Cache-Control "public"
    </FilesMatch>

    # 图片文件 - 缓存1个月
    <FilesMatch "\.(jpg|jpeg|gif|webp)$">
        ExpiresDefault "access plus 1 month"
        Header append Cache-Control "public"
    </FilesMatch>

    # 字体文件 - 缓存1年
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        ExpiresDefault "access plus 1 year"
        Header append Cache-Control "public, immutable"
    </FilesMatch>
</IfModule>

# 禁用ETag（可选，减少不必要的条件验证）
<IfModule mod_headers.c>
    <FilesMatch "\.(ico|png|svg|apple-touch-icon\.png|css|js|woff|woff2)$">
        Header unset ETag
        FileETag None
    </FilesMatch>
</IfModule>

# Gzip压缩（优化传输效率）
<IfModule mod_deflate.c>
    <FilesMatch "\.(js|css|html|svg|png|ico)$">
        SetOutputFilter DEFLATE
    </FilesMatch>
</IfModule>
